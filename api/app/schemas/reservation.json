{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Reservation",
    "description": "A reservation that a customer can put on an entity",
    "type": "object",
    "properties": {
        "entity": {
            "description": "The entity that is reserved",
            "type": "string"
        },
        "type": {
            "description" : "The type of the entity that is reserved",
            "type" : "string"
        },
        "time" : {
            "description" : "Time of reservation",
            "type" : "object",
            "oneOf":  [{ "$ref": "#/definitions/ReservationTime" }]
        },
        "comment" : {
            "description" : "Customer's comment",
            "type" : "string"
        },
        "subject" : {
            "description" : "Subject of the reservation (e.g. Board Meeting)",
            "type" : "string"
        },
        "announce" : {
            "description" : "Describe the location in a building with the floor number and a png map",
            "type" : "array",
            "items": {
                "type": "string"
            }
        }
    },
    "definitions": {
        "ReservationTime": {
            "properties" : {
                "from" : {
                    "description" : "The opening hour of the place or service on the given day(s) of the week.",
                    "type" : "time"
                },
                "to" : {
                    "description" : "The closing hour of the place or service on the given day(s) of the week.",
                    "type" : "time"
                }
            },
            "required": [ "from", "to"],
            "additionalProperties": false
        }
    }
    "required": ["entity", "type", "time", "comment", "subject", "announce", "contact"]
}